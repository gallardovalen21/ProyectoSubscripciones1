<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SubTracker</title>

    @* 1. Motor de Tailwind CSS *@
    <script src="https://cdn.tailwindcss.com"></script>

    @* 2. Fuente Inter (muy usada en software moderno) *@
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

    <style>
        body { font-family: 'Inter', sans-serif; }
    </style>
</head>
<body class="bg-slate-50">
    <header class="bg-white border-b border-slate-200 sticky top-0 z-50">
        <nav class="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between">
            @* Logo *@
            <a class="text-xl font-extrabold text-indigo-600 tracking-tighter" asp-page="/Index">
                SUB<span class="text-slate-400">TRACKER</span>
            </a>

            @* Menú *@
            <div class="hidden md:flex items-center gap-8">
                <a class="text-sm font-semibold text-slate-600 hover:text-indigo-600 transition-colors" asp-page="/Index">Home</a>
                <a class="text-sm font-semibold text-slate-600 hover:text-indigo-600 transition-colors" asp-page="/Anual">Gasto Anual</a>
                <a class="text-sm font-semibold text-slate-600 hover:text-indigo-600 transition-colors" asp-page="/Mensual">Gasto Mensual</a>
                <a class="bg-indigo-50 text-indigo-700 px-4 py-2 rounded-lg text-sm font-bold hover:bg-indigo-100 transition-all" asp-page="/AgregarSub">
                    + Nueva Sub
                </a>
            </div>
        </nav>
    </header>

    @* Contenedor principal *@
    <div class="max-w-7xl mx-auto px-4 py-8">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="py-10 border-t border-slate-200 text-center text-sm text-slate-400">
        <div class="container">
            &copy; 2025 - Sistema de Gestión de Suscripciones - <a class="hover:underline" asp-page="/Privacy">Privacidad</a>
        </div>
    </footer>

    @* Scripts mínimos necesarios *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>